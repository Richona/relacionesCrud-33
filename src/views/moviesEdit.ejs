<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title class="titulo">Editar Película</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include("./partials/header") %>
    <h1 class="titulo">Película Editada:  <%= Movie.title %></h1>
    <section class="formulario">
        <form action="/movies/update/<%= Movie.id %>?_method=PUT" method="POST">
            <div>
                <label for="title">Title </label>
                <p><input type="text" class="<%= locals.errors && errors.title ? "inputInvalidoRed" : null %>" name="title" id="" value="<%= Movie.title %>" ></p>
                <p class="text-danger"><%= locals.errors && errors.title ? errors.title.msg : null %></p>
            </div>
            <div>
                <label for="rating">Rating </label>
                <p><input type="number" class="<%= locals.errors && errors.rating ? "inputInvalidoRed" : null %>" name="rating" id="" value="<%= Movie.rating %>" ></p>
                <p class="text-danger"><%= locals.errors && errors.rating ? errors.rating.msg : null %></p>
            </div>
            <div>
                <label for="awards">Awards </label>
                <p><input type="number" class="<%= locals.errors && errors.awards ? "inputInvalidoRed" : null %>" name="awards" id="" value="<%= Movie.awards %>" ></p>
                <p class="text-danger"><%= locals.errors && errors.awards ? errors.awards.msg : null %></p>
            </div>
            <div>
                <label for="release_date">Release date </label>
                <p><input type="date" class="<%= locals.errors && errors.release_date ? "inputInvalidoRed" : null %>" name="release_date" id="" value="<%= moment(Movie.release_date).format('YYYY-MM-DD') %>" ></p>
                <p class="text-danger"><%= locals.errors && errors.release_date ? errors.release_date.msg : null %></p>
            </div>
            <div>
                <label for="length">Length </label>
                <p><input type="number" class="<%= locals.errors && errors.length ? "inputInvalidoRed" : null %>" name="length" id="" value="<%= Movie.length %>" ></p>
                <p class="text-danger"><%= locals.errors && errors.length ? errors.length.msg : null %></p>
            </div>
            <div>
               <label for="genre_id">Genre </label>
                <p>
                    <select name="genre_id" id="" >
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>" <% if (locals.old ? +locals.old.genre_id === genre.id : Movie.genre_id == genre.id) { %><%= 'selected' %><% }; %>><%= genre.name %></option>
                        <% }); %>
                    </select>
                </p> 
                <p class="text-danger"><%= locals.errors && errors.genre_id ? errors.genre_id.msg : null %></p>
            </div>
            

    <!--
            <label for="genre_id">Genre ID </label>
            <p><input type="number" name="genre_id" id="" value="<%= Movie.genre_id %>"></p>
        -->
            
            <br>
            <p> <button class="botonAgregar" type="submit">Actualizar</button>
        
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
</body>

</html>