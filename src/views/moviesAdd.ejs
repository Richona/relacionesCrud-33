<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <%- include("./partials/header") %>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/create" method="POST">
            <div>
                <label for="title">Title </label>
                <p><input type="text" class="<%= locals.errors && errors.title ? "inputInvalidoRed" : null %>" name="title" id="" value="<%= locals.old && old.title %>"></p>
                <p class="text-danger"><%= locals.errors && errors.title ? errors.title.msg : null %></p>
            </div>
            <div>
                <label for="rating">Rating </label>
                <p><input type="number" class="<%= locals.errors && errors.rating ? "inputInvalidoRed" : null %>" name="rating" id="" value="<%= locals.old && old.rating %>"> </p>
                <p class="text-danger"><%= locals.errors && errors.rating ? errors.rating.msg : null %></p>
            </div>
            <div>
                 <label for="awards">Awards </label>
                <p><input type="number" class="<%= locals.errors && errors.awards ? "inputInvalidoRed" : null %>" name="awards" id="" value="<%= locals.old && old.awards %>"></p>
                <p class="text-danger"><%= locals.errors && errors.awards ? errors.awards.msg : null %></p>
            </div>
            <div>
                <label for="release_date">Release date </label>
                <p><input type="date" class="<%= locals.errors && errors.release_date ? "inputInvalidoRed" : null %>" name="release_date" id="" value="<%= locals.old && old.release_date %>"></p>
                <p class="text-danger"><%= locals.errors && errors.release_date ? errors.release_date.msg : null %></p>
            </div>
            <div>
                <label for="length">Length </label>
                <p><input type="number" class="<%= locals.errors && errors.length ? "inputInvalidoRed" : null %>" name="length" id="" value="<%= locals.old && old.length %>"></p>
                <p class="text-danger"><%= locals.errors && errors.length ? errors.length.msg : null %></p>
            </div>
            <div>
                <label for="genreID">Genre </label>
                <p>
                    <select name="genre_id" id="">
                        <option value="" disabled selected>- select genre - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>" <%= locals.old && locals.old.genre_id && genre.id === +locals.old.genre_id ? "selected":null %>><%= genre.name %></option>
                        <% }); %>
                    </select>
                </p>
                <p class="text-danger"><%= locals.errors && errors.genre_id ? errors.genre_id.msg : null %></p>
            </div>
            
            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
    
</body>

</html>