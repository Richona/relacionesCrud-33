<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actor add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <%- include("./partials/header") %>
    <h1 class="titulo">Agregar actor</h1>
    <br>
    <section class="formulario">
        <form action="/actors/create" method="POST">
            <div>
                <label for="first_name">Name </label>
                <p><input type="text" class="<%= locals.errors && errors.first_name ? "inputInvalidoRed" : null %>" name="first_name" id="" value="<%= locals.old && old.first_name %>"></p>
                <p class="text-danger"><%= locals.errors && errors.first_name ? errors.first_name.msg : null %></p>
            </div>
            <div>
                <label for="last_name">Lastname </label>
                <p><input type="text" class="<%= locals.errors && errors.last_name ? "inputInvalidoRed" : null %>" name="last_name" id="" value="<%= locals.old && old.last_name %>"> </p>
                <p class="text-danger"><%= locals.errors && errors.last_name ? errors.last_name.msg : null %></p>
            </div>
            <div>
                <label for="rating">rating </label>
                <p><input type="number" class="<%= locals.errors && errors.rating ? "inputInvalidoRed" : null %>" name="rating" id="1" value="<%= locals.old && old.rating %>"></p>
                <p class="text-danger"><%= locals.errors && errors.rating ? errors.rating.msg : null %></p>
            </div>
            <div>
                <label for="favorite_movie_id">Favorite Movie </label>
                <select name="favorite_movie_id" id="" >
                    <option value="" disabled selected>- select movie - </option>
                    <% movie.forEach(movie => { %>
                    <option value="<%= movie.id %>" <%= locals.old && old.favorite_movie_id && +old.favorite_movie_id === movie.id ? "selected" : null %>><%= movie.title %></option>
                    <% }); %>
                </select>
            </div>
            
            <br>
            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/actors">Listado de actores</a></p>
        </form>
    </section>
    
</body>

</html>